name: CI Smoke + E2E

on:
  push:
    branches: [ "main" ]

jobs:
  smokee2e:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install dependencies
        run: npm ci

      - name: Prisma migrate (reset + seed)
        run: |
          npx prisma migrate reset --force --skip-seed
          npx prisma generate

      - name: Start backend
        run: |
          : > server.log
          nohup npm run dev >> server.log 2>&1 &
          echo $! > server.pid

      - name: Wait for health
        run: |
          for i in {1..30}; do
            if curl -s http://127.0.0.1:3000/health | grep -q "status"; then
              echo "✅ Backend is up"
              exit 0
            fi
            echo "⏳ waiting... ($i)"
            sleep 2
          done
          echo "❌ Backend failed to start"
          tail -n 100 server.log
          exit 1

      - name: Run API E2E tests
        run: bash scripts/api-e2e.sh

      - name: Show backend logs
        if: always()
        run: tail -n 200 server.log || true

      - name: Upload server.log
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: server-log
          path: server.log

      - name: Stop backend
        if: always()
        run: |
          if [ -f server.pid ]; then
            kill -9 $(cat server.pid) || true
          fi
