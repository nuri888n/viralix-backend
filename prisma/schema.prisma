// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // z.B. "file:./dev.db"
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  accounts     Account[]
  projects     Project[]
  createdAt    DateTime  @default(now())
}

model Account {
  id        Int       @id @default(autoincrement())
  handle    String    @unique
  platform  String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])

  // ⚠️ WICHTIG: gleicher Relation-Name wie in Post.accounts
  posts     Post[]    @relation("PostAccounts")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  posts     Post[]
  createdAt DateTime  @default(now())
}

model Post {
  id         Int       @id @default(autoincrement())
  caption    String?
  projectId  Int
  project    Project   @relation(fields: [projectId], references: [id])

  // ⚠️ Gegenfeld der M:N-Relation — gleicher Name
  accounts   Account[] @relation("PostAccounts")

  createdAt  DateTime  @default(now())
}